/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
    font:                   "FiraCodeNerdFont 13";
}

window {
    width:                  525px;
    padding:                25px;
    border:                 0px 0px 2px 0px;
    border-radius:          0px;
    border-color:           @ac;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand:                 true;
    text-color:             @ac;
}
