{
    /*
     * general
     */
    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnSaveTimeout": 1000,
    "coc.preferences.willSaveHandlerTimeout": 1000,
    "diagnostic.errorSign": "E",
    "diagnostic.warningSign": "W",
    "diagnostic.infoSign": "I",
    "diagnostic.hintSign": "H",
    "diagnostic.floatConfig": {
        "border": true,
        "rounded": true,
    },
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextFormat": "[%source%code] %message",
    "suggest.noselect": true,
    "suggest.floatConfig": {
        "border": true,
    },
    "hover.floatConfig": {
        "border": true,
    },
    "suggest.completionItemKindLabels": {
        "text": "Text",
        "method": "Method",
        "function": "Function",
        "constructor": "Constructor",
        "field": "Field",
        "variable": "Variable",
        "class": "Class",
        "interface": "Interface",
        "module": "Module",
        "property": "Property",
        "unit": "Unit",
        "value": "Value",
        "enum": "Enum",
        "keyword": "Keyword",
        "snippet": "Snippet",
        "color": "Color",
        "file": "File",
        "reference": "Reference",
        "folder": "Folder",
        "enumMember": "Enum member",
        "constant": "Constant",
        "struct": "Struct",
        "event": "Event",
        "operator": "Operator",
        "typeParameter": "Type",
        "default": ""
    },
    /*
     * python
     */
    // pylsp
    // toggle debugging
    // "pylsp.trace.server": "verbose",
    // "pylsp.connectionMode": "tcp",
    "pylsp.disableProgressNotifications": false,
    "pylsp.builtin.enableInstallPylspMypy": true,
    "pylsp.builtin.enableInstallPythonLspRuff": false,
    "pylsp.builtin.enableInstallPylspRope": false,
    "pylsp.plugins.pycodestyle.enabled": false,
    "pylsp.plugins.yapf.enabled": false,
    "pylsp.plugins.autopep8.enabled": false,
    "pylsp.plugins.pyflakes.enabled": false,
    "pylsp.plugins.mccabe.enabled": true,
    "pylsp.plugins.ruff.enabled": false,
    "pylsp.plugins.jedi.environment": "${cwd}/.venv/",
    // ruff
    "ruff.enable": true,
    "ruff.autoFixOnSave": true,
    // pydocstring
    "pydocstring.enable": true,
    "pydocstring.formatter": "google",
    "pydocstring.ignoreInit": true,
    "pydocstring.templatePath": "~/.doq/google/",
    /*
     * sql
     */
    "sqlfluff.enable": true,
    "sqlfluff.dialect": "postgres",
    /* 
     *haskell - hls
     */
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ],
            "settings": {
                "haskell.formattingProvider": "ormolu",
                "plugin": {
                    "stan": {
                        "globalOn": true
                    }
                }
            },
        }
    }
}
